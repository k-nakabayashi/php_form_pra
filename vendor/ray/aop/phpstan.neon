parameters:
  level: max
  paths:
    - src
    - tests
  excludes_analyse:
    - %currentWorkingDirectory%/tests/tmp/*
    - %currentWorkingDirectory%/tests/tmp_unerase/*
    - %currentWorkingDirectory%/tests/Fake/*
    - %currentWorkingDirectory%/tests/ReflectiveMethodInvocationTest.php
  ignoreErrors:
  -
      message: "#has no return typehint specified\\.$#"
      path: tests/*.php
  checkMissingIterableValueType: false
  checkGenericClassInNonGenericObjectType: false
